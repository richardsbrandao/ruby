<p id="notice"><%= notice %></p>

<h1>People</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Gender</th>
      <th>Birthyear</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td><%= person.gender %></td>
        <td><%= person.birthyear %></td>
        <td><%= link_to 'Show', person_path(person.id) %></td>
        <td><%= link_to 'Edit', edit_person_path(person.id) %></td>
        <td><%= link_to 'Destroy', person_path(person.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Person', new_person_path %>
