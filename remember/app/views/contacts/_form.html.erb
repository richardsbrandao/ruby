<div class="col-lg-4">

  <%= form_for @contact, :html => { :class => "form-horizontal contact" } do |f| %>
      <% if @contact.errors.any? %>
      <div id="error_expl" class="panel panel-danger">
        <div class="panel-heading">
          <h3 class="panel-title"><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h3>
        </div>
        <div class="panel-body">
          <ul>
          <% @contact.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      </div>
    <% end %>

    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'form-control' %>
      </div>
      <%= error_span(@contact[:name]) %>
    </div>
    <div class="control-group">
      <%= f.label :email, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :email, :class => 'form-control' %>
      </div>
      <%= error_span(@contact[:email]) %>
    </div>
    <div class="control-group">
      <%= f.label :phone, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :phone, :class => 'form-control' %>
      </div>
      <%= error_span(@contact[:phone]) %>
    </div>
    <div class="control-group">
      <%= f.label :birthday, :class => 'control-label' %>
      <div class="controls">
      <%= f.date_select :birthday, 
          {:end_year =>1900, :start_year=> Time.now.year, :prompt=>true, :order => [:day, :month, :year]}, 
          :class => 'form-control select-date'  %>
      </div>
      <%= error_span(@contact[:birthday]) %>
    </div>
    <div class="control-group">
      <%= f.label :facebook, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :facebook, :class => 'form-control' %>
      </div>
      <%= error_span(@contact[:facebook]) %>
    </div>

    <div class="btn-group-sm">
      
        <%= f.submit nil, :class => 'btn btn-primary' %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  contacts_path, :class => 'btn btn-default' %>
      
    </div>
  <% end %>
</div>